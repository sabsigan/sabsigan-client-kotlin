<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    tools:context=".wifi.WifiRateFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/rounded_top">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/rounded_top_inner"
            android:elevation="8dp"
            android:gravity="center"
            android:orientation="vertical"
            android:outlineSpotShadowColor="@color/background_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@+id/layout"
            tools:layout_editor_absoluteX="10dp">

            <TextView
                android:id="@+id/ssid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="ssid"
                android:padding="1dp"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bssid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="bssid"
                android:padding="1dp"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/macAdress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="macAdress"
                android:padding="1dp"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ipAdress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="ipAdress"
                android:padding="1dp"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/networkId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="networkId"
                android:padding="1dp"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/linkSpeed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="linkSpeed"
                android:padding="1dp"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/gradient_bottom_bg"
            android:elevation="10dp"
            android:outlineSpotShadowColor="@color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.2"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>